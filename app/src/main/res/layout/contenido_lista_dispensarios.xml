<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="12dp"
app:cardCornerRadius="16dp"
android:elevation="6dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="@android:color/white">

<!-- Bloque Azul -->
<LinearLayout
android:layout_width="120dp"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:padding="12dp"
android:background="@color/colorPrimary">

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="No. Dispensario:"
android:textSize="14sp"
android:textColor="@android:color/white"
android:textAlignment="center"/>
<TextView
android:id="@+id/NoDispensario"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="1"
android:textSize="28sp"
android:textColor="@android:color/white"
android:textStyle="bold" />
</LinearLayout>

<!-- Contenido: Marca/Modelo/Serie + Producto1/2/3 -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
android:padding="12dp">

<!-- Fila 1: Marca + Producto 1 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="4dp">

<!-- Marca -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Marca:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/Marca"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Wayne"
android:textSize="14sp"
android:textColor="#212121" />
</LinearLayout>

<!-- Producto 1 -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:id="@+id/NomProducto1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Producto 1:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/Producto1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Premium"
android:textSize="14sp"
android:textColor="#212121" />
</LinearLayout>
</LinearLayout>

<!-- Fila 2: Modelo + Producto 2 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="4dp">

<!-- Modelo -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Modelo:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/Modelo"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="MXP-2000"
android:textSize="14sp"
android:textColor="#212121" />
</LinearLayout>

<!-- Producto 2 -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:id="@+id/NomProducto2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Producto 2:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/Producto2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Magna"
android:textSize="14sp"
android:textColor="#212121" />
</LinearLayout>
</LinearLayout>

<!-- Fila 3: Serie + Producto 3 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<!-- Serie -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Serie:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/Serie"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="ABC123XYZ"
android:textSize="14sp"
android:textColor="#212121" />
</LinearLayout>

<!-- Producto 3 -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical"
android:visibility="gone">
<TextView
android:id="@+id/NomProducto3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Producto 3:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/Producto3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Diesel"
android:textSize="14sp"
android:textColor="#212121" />
</LinearLayout>
</LinearLayout>
</LinearLayout>

<!-- Ãcono -->
<LinearLayout
android:layout_width="60dp"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical">

<ImageView
android:id="@+id/iconoGasolinera2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ic_dispensarios" />
</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>
