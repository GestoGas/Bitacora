<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <!-- Bloque Azul Izquierdo con Folio -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folio:"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TxtFolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00001"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Cancelada -->
            <TextView
                android:id="@+id/Cancelada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelada"
                android:textColor="#C41919"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:visibility="gone" />

            <!-- No. Dispensario -->
            <TextView
                android:id="@+id/textViewDispensarioLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Dispensario:"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/NoDispensario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"
                android:textColor="#212121" />

            <!-- Producto -->
            <TextView
                android:id="@+id/textViewProductoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto:"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/TxtProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textSize="14sp"
                android:textColor="#212121" />

            <!-- Lado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lado:"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/TxtLado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="A"
                    android:textSize="14sp"
                    android:textColor="#212121" />
            </LinearLayout>

            <!-- Fecha -->
            <TextView
                android:id="@+id/textViewFechaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha y hora:"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/TxtFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-07-03 16:30"
                android:textColor="#212121"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

        <!-- Ãconos Laterales (Gas a la izquierda, Flecha a la derecha) -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iconoGasolinera2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_bitacora" />

            <ImageView
                android:id="@+id/iconoDetalleExtintor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
