<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="12dp"
app:cardCornerRadius="16dp"
android:elevation="6dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="@android:color/white">

<!-- Bloque Azul -->
<LinearLayout
android:layout_width="120dp"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:padding="12dp"
android:background="@color/colorPrimary">

<TextView
android:id="@+id/txt1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="No. Extintor:"
android:textSize="14sp"
android:textColor="@android:color/white"
android:textAlignment="center"/>
<TextView
android:id="@+id/NoExtintor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="1"
android:textSize="28sp"
android:textColor="@android:color/white"
android:textStyle="bold" />
</LinearLayout>

<!-- Contenido: Marca/Modelo/Serie + Producto1/2/3 -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
android:padding="12dp">

<!-- Fila 1: Marca + Producto 1 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="4dp">

<!-- Marca -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
android:id="@+id/txt5"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Peso (Kg):"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/PesoKg"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="MXP-2000"
android:textSize="14sp"
android:textColor="#212121" />

</LinearLayout>

<!-- Producto 1 -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:id="@+id/txt4"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Tipo:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/TipoExtintor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Polvo Quimico"
android:textSize="14sp"
android:textColor="#212121" />

</LinearLayout>
</LinearLayout>

<!-- Fila 2: Modelo + Producto 2 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="4dp">

<!-- Modelo -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
android:id="@+id/txt2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Ubicación:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/Ubicacion"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Oficinas"
android:textSize="14sp"
android:textColor="#212121" />

</LinearLayout>
</LinearLayout>

<!-- Producto 2 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="4dp">
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:id="@+id/txt3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Fecha de recarga:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/FechaRecarga"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="01 de febrero de 2024"
android:textSize="14sp"
android:textColor="#212121" />
</LinearLayout>
</LinearLayout>

</LinearLayout>

<!-- Ícono -->
<LinearLayout
android:layout_width="60dp"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="horizontal">

<ImageView
android:id="@+id/iconoGasolinera2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ic_extintores" />

<ImageView
android:id="@+id/iconoDetalleExtintor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ic_arrow_right" />

</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>
