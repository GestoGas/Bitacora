<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="12dp"
app:cardCornerRadius="16dp"
android:elevation="6dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@android:color/white"
android:orientation="horizontal">

<!-- Bloque Azul -->
<!-- Bloque Azul -->
<LinearLayout
android:layout_width="120dp"
android:layout_height="wrap_content"
android:background="@color/colorPrimary"
android:gravity="center"
android:orientation="vertical"
android:padding="12dp">

<TextView
android:id="@+id/txt1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="No. Tanque:"
android:textAlignment="center"
android:textColor="@android:color/white"
android:textSize="14sp" />

<TextView
android:id="@+id/NoTanque"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="1"
android:textColor="@android:color/white"
android:textSize="28sp"
android:textStyle="bold" />
</LinearLayout>

<!-- Contenido: Marca/Modelo/Serie + Producto1/2/3 -->

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_weight="1"
android:gravity="center_vertical"
android:orientation="vertical"
android:padding="12dp">

<!-- Fila 1: Marca + Producto 1 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="4dp"
android:orientation="horizontal">

<!-- Marca -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical">

<TextView
android:id="@+id/txt2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Capacidad (Lts):"
android:textColor="#757575"
android:textSize="12sp" />

<TextView
android:id="@+id/Capacidad"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="150"
android:textColor="#212121"
android:textSize="14sp" />

</LinearLayout>

<!-- Producto 1 -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical">

<TextView
android:id="@+id/txt3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Producto:"
android:textColor="#757575"
android:textSize="12sp" />

<TextView
android:id="@+id/Producto"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="G SUPER"
android:textColor="#212121"
android:textSize="14sp" />

</LinearLayout>
</LinearLayout>

</LinearLayout>

<LinearLayout
android:layout_width="60dp"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="horizontal">

<ImageView
android:id="@+id/iconoGasolinera2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ic_tanque" />

<ImageView
android:id="@+id/iconoDetalleExtintor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ic_arrow_right" />

</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>