<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="12dp"
app:cardCornerRadius="16dp"
android:elevation="6dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="@android:color/white">

<!-- Bloque Azul -->
<LinearLayout
android:layout_width="120dp"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:padding="12dp"
android:background="@color/colorPrimary">

<TextView
android:id="@+id/textView16"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Folio:"
android:textSize="14sp"
android:textColor="@android:color/white"
android:textAlignment="center"/>
<TextView
android:id="@+id/TxtFolio"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="1"
android:textSize="28sp"
android:textColor="@android:color/white"
android:textStyle="bold" />
</LinearLayout>


<!-- Contenido: Marca/Modelo/Serie + Producto1/2/3 -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
android:padding="12dp">

<!-- Fila 2: Modelo + Producto 2 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="4dp">

<!-- Modelo -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
android:id="@+id/textEstado"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Estatus:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/txtEstado"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
android:text="Pendiente"
android:textSize="14sp"
android:textColor="#212121" />

</LinearLayout>
</LinearLayout>

<!-- Fila 1: Marca + Producto 1 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="4dp">

<!-- Marca -->
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
android:id="@+id/textDescripcion"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Descripción:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/TxtDescripcion"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="PEMEX PREMIUM"
android:textSize="14sp"
android:textColor="#212121" />

</LinearLayout>
</LinearLayout>

<!-- Producto 2 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="4dp">
<LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:id="@+id/txt3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Fecha y hora de registro:"
android:textSize="12sp"
android:textColor="#757575" />
<TextView
android:id="@+id/TxtFechaHora"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="01 de febrero de 2024, 1:00 am a 2:04 am"
android:textSize="14sp"
android:textColor="#212121" />
</LinearLayout>
</LinearLayout>

</LinearLayout>

<!-- Ícono -->
<LinearLayout
android:layout_width="60dp"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="horizontal">

<ImageView
android:id="@+id/iconoGasolinera2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ic_mantenimiento" />

<ImageView
android:id="@+id/iconoDetalleExtintor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ic_arrow_right" />

</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>
